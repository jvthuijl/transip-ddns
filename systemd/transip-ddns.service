[Unit]
Description=TransIP DDNS Updater
After=network-online.target

[Service]
ExecStart=/usr/local/bin/transip-ddns
User=root
Group=root
Environment="TRANSIP_ACCOUNT_NAME=username"
Environment="TRANSIP_PRIVATE_KEY_PATH=/etc/transip-ddns/secrets/transip-key"
Environment="DOMAIN=domain"
Environment="SUBDOMAIN=subdomain"

Type=oneshot
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
